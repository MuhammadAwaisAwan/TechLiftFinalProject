@using TechLift.FinalProject.ViewModel
@model DashBoardVM

<h1>Wellcome To the Employee Managment System</h1>

<div class="card" style="width: 25rem">
    <div class="card-body">
        <div class="mt-2 lead">Total Employee:</div>
        <h2 class="card-title" style="font-size:1.8em;">
            @Model.TotalEmployee
        </h2>
    </div>

</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Employee Count
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model is not null)
        {
            @foreach (var item in Model.dashBoardDepartmentVMs)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.departmentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.totalDepEmployee)
                    </td>

                </tr>
            }
        }
    </tbody>
</table>